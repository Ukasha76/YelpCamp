<% layout('layouts/boilerplate')%>
    <h1>All Campgrounds</h1>

    <% for(let c of alldata) { %>
        <div class="carb  mb-3">
            <div class="row">
                <% if(c.images.length) {%>
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=c.images[0].url%>">
                </div>
                <% } else{%>
                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                        <h6>No image provided</h6>
                     </div>
                     
                    <% } %>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-tittle">
                            <%= c.tittle %>
                        </h5>
                        <p class="card-text">
                            <%= c.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= c.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= c._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>

            </div>
        </div>
        <% }%>
